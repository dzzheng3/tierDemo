<?xml version="1.0" encoding="utf-8"?>
<com.example.nandu.tieredsample.TieredCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.nandu.tieredsample.TieredCardView">

    <RelativeLayout
        android:id="@+id/ub_tiered_payment_reward_progress_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ub_tiered_payment_reward_progress_headline_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="-1"
                android:src="@drawable/tag" />
            <TextView
                android:id="@+id/ub_card_tiered_payment_rewards_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Save 10% next week----ar Save 10% next week----ar" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ub_card_tiered_payment_rewards_headline_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take 5 rides" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/ub__card_payment_rewards_progress_subtitle_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <ImageView
                    android:id="@+id/ub_card_tiered_payment_rewards_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ub_tiered_payment_reward_animated_vector_check"
                    app:layout_constraintBottom_toBottomOf="@+id/ub__card_payment_rewards_progress_subtitle_container"
                    app:layout_constraintEnd_toEndOf="@+id/ub__card_payment_rewards_progress_subtitle_container"
                    app:layout_constraintStart_toStartOf="@+id/ub__card_payment_rewards_progress_subtitle_container"
                    app:layout_constraintTop_toTopOf="@+id/ub__card_payment_rewards_progress_subtitle_container" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/ub_card_tiered_payment_rewards_text_body"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="viewStart"
        android:layout_marginStart="8dp"
        android:text="You'll get 10% off next week's rides keep riding thisweek to unlockmore rewards."
        app:layout_constraintTop_toBottomOf="@+id/ub_tiered_payment_reward_progress_head" />

    <View
        android:id="@+id/ub__card_payment_rewards_progress_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#cdcdcd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsv" />

    <TextView
        android:id="@+id/ub__card_tiered_payment_rewards_progress_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Reward Detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ub__card_payment_rewards_progress_separator" />

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ub_card_tiered_payment_rewards_text_body">

        <LinearLayout
            android:id="@+id/ub__card_payment_rewards_progress_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>
    </HorizontalScrollView>

</com.example.nandu.tieredsample.TieredCardView>
